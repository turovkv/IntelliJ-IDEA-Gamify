<idea-plugin>
    <id>intellij.gamify</id>
    <name>Gamify</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.intellij.plugin.gamification.services.RewardStatisticsService"/>
        <statusBarWidgetFactory id="gameProgressWidget" implementation="com.intellij.plugin.gamification.widget.GameProgressWidgetFactory" order="last"/>
    </extensions>

    <applicationListeners>
        <listener class="com.intellij.plugin.gamification.listeners.FeatureUsageListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
        <listener class="com.intellij.plugin.gamification.listeners.GameEventListenerImpl"
                  topic="com.intellij.plugin.gamification.listeners.GameEventListener"/>
    </applicationListeners>

    <actions>
            <action id="action.FeatureGamificationButton"
                    class="com.intellij.plugin.gamification.actions.FeatureGamificationButton"
                    text="FeatureGamification"
            >
                <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
            </action>
    </actions>
</idea-plugin>
