<idea-plugin>
    <id>com.github.turovkv.jetbrainsidefeaturesgamification</id>
    <name>Features Gamification</name>
    <vendor>Features Gamification</vendor>


    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.turovkv.jetbrainsidefeaturesgamification.services.SavedStatistics"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.turovkv.jetbrainsidefeaturesgamification.listeners.FeatureUsageListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>
</idea-plugin>
