<idea-plugin>
    <id>com.github.turovkv.jetbrainsidefeaturesgamification</id>
    <name>Jetbrains-Ide-Features-Gamification</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.turovkv.jetbrainsidefeaturesgamification.services.SavedStatistics"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.turovkv.jetbrainsidefeaturesgamification.listeners.FeatureUsageListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <actions>
        <group id="com.github.turovkv" text="HelloWorld" popup="true">
            <action id="action.FutureGamificationButton"
                    class="com.github.turovkv.jetbrainsidefeaturesgamification.actions.FutureGamificationButton"
                    text="FeatureGamification"
            >
                <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
            </action>
        </group>
    </actions>
</idea-plugin>
